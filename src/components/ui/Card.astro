---
export interface Props {
  variant?: 'default' | 'glass' | 'gradient';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  class: className,
  ...props
} = Astro.props;

const baseClasses = 'rounded-lg border backdrop-blur-sm transition-all duration-300';

const variants = {
  default: 'bg-dark-800/90 border-dark-700/50 hover:border-dark-600/50',
  glass: 'bg-white/5 border-white/10 hover:bg-white/10',
  gradient: 'bg-gradient-card border-dark-700/30 hover:border-accent-500/30'
};

const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const classes = `${baseClasses} ${variants[variant]} ${paddings[padding]} ${className || ''}`;
---

<div class={classes} {...props}>
  <slot />
</div> 