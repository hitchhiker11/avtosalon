---
// src/components/sections/LocationSection.astro
---

<section id="location">
  <div class="container">
    <div class="header">
      <h2>Где мы находимся</h2>
      <p>
        Наш автосалон расположен в удобном месте с отличной транспортной доступностью. 
        Мы всегда рады видеть вас в нашем офисе.
      </p>
    </div>

    <div class="content-wrapper">
      <div class="map-wrapper">
        <picture>
          <source media="(max-width: 639px)" srcset="/images/location-map-mobile.png">
          <source media="(min-width: 640px)" srcset="/images/location-map.png">
          <img src="/images/location-map.png" alt="Карта расположения автосалона" class="map-image">
        </picture>
        <div class="map-pin">&#xf3c5;</div>
      </div>
      
      <div class="info-card">
        <div class="info-logo-title">
            <img src="/images/logo-chv-white.png" alt="Чистый выкуп лого" class="info-logo" />
            <h3>ЧИСТЫЙ ВЫКУП</h3>
        </div>

        <div class="info-grid">
            <div class="info-left">
                <div class="contact-item">
                    <span class="icon">&#xf3c5;</span>
                    <p>Москва, ул. Василисы Кожиной, 13</p>
                </div>
                <div class="contact-item">
                    <span class="icon">&#xf095;</span>
                    <p>+7 (495) 123-45-67</p>
                </div>
                 <div class="contact-item mobile-only">
                    <span class="icon">&#xf0e0;</span>
                    <p>info@premiumauto.ru</p>
                </div>
            </div>
            
            <div class="info-right">
                <h4>Режим работы:</h4>
                <div class="work-hours">
                    <p>Пн-Пт: 9:00 - 20:00</p>
                    <p>Сб: 10:00 - 18:00</p>
                    <p>Вс: 10:00 - 16:00</p>
                </div>
            </div>
        </div>

        <a href="#" class="route-button">Построить маршрут</a>
      </div>
    </div>
  </div>
</section>

<style>
  :root {
    --screen-min: 340;
    --screen-mid-low: 640;
    --screen-mid-high: 960;
    --screen-max: 1920;
  }

  #location {
    background-color: #000;
    color: #fff;
    font-family: 'Inter', sans-serif;
    padding: clamp(60px, 6.51vw, 125px) 0;
    overflow: hidden;
  }

  .container {
    max-width: 1920px;
    margin: 0 auto;
    padding: 0 clamp(20px, 10.42vw, 200px);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: clamp(30px, 2.55vw, 49px);
  }

  .header {
    text-align: center;
    max-width: 768px;
    display: flex;
    flex-direction: column;
    gap: clamp(8px, 0.83vw, 16px);
  }

  .header h2 {
    font-weight: 700;
    font-size: clamp(23.58px, 1.82vw, 35.02px);
    line-height: 1.14;
  }

  .header p {
    color: #D1D5DB;
    font-size: clamp(14.88px, 1.04vw, 20px);
    line-height: 1.2;
  }

  .content-wrapper {
    width: 100%;
    position: relative;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .map-wrapper {
    position: relative;
    width: 100%;
    line-height: 0; /* Removes bottom space from image */
  }

  .map-image {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 3 / 1;
  }
  
  .map-pin {
    display: none; /* Hidden by default, shown on mobile */
    font-family: 'Font Awesome 5 Free';
    font-weight: 900;
    color: #E6512E;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 32px; /* Set size for mobile map pin */
  }
  
  .info-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    background: rgba(31, 19, 12, 0.9);
    backdrop-filter: blur(10px);
    padding: clamp(20px, 2.08vw, 40px) clamp(20px, 1.67vw, 32px);
    box-sizing: border-box;
    
    /* Desktop styles */
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
  }
  
  .info-grid {
      display: flex;
      gap: clamp(20px, 4.16vw, 80px);
      flex-grow: 1;
  }

  .info-logo-title { display: none; } /* Hidden on desktop */
  
  .info-left, .info-right {
    display: flex;
    flex-direction: column;
  }
  
  .info-left {
      gap: clamp(10px, 1.04vw, 20px);
  }

  .info-left h3 {
    font-weight: 700;
    font-size: clamp(15.01px, 1.22vw, 23.42px);
    line-height: 1.36;
  }
  
  .contact-item {
      display: flex;
      align-items: center;
      gap: 10px;
  }

  .icon {
      font-family: 'Font Awesome 5 Free';
      font-weight: 900;
      color: #E6512E;
      font-size: clamp(14.33px, 0.83vw, 16px);
      line-height: 1;
  }

  .contact-item p {
      font-size: clamp(12.98px, 0.79vw, 15.11px);
      line-height: 1.6;
      color: #D1D5DB;
  }
  .mobile-only { display: none; }

  .info-right {
    gap: clamp(8px, 0.42vw, 8px);
    text-align: left;
  }
  
  .work-hours {
      display: flex;
      flex-direction: column;
      gap: clamp(4px, 0.2vw, 4px);
  }

  .info-right h4 {
    font-weight: 700;
    font-size: clamp(14px, 0.91vw, 17.57px);
    line-height: 1.59;
  }

  .info-right p {
    font-size: clamp(12.98px, 0.78vw, 15px);
    line-height: 1.6;
    color: #D1D5DB;
  }

  .route-button {
    background-color: #E6512E;
    color: #fff;
    border: none;
    border-radius: 4px;
    padding: clamp(12px, 0.83vw, 16px) clamp(20px, 2.45vw, 47px);
    font-size: clamp(12.98px, 0.77vw, 14.86px);
    line-height: 1.61;
    font-weight: 400;
    cursor: pointer;
    text-decoration: none;
    text-align: center;
    white-space: nowrap;
    transition: background-color 0.3s ease;
    flex-shrink: 0;
  }
  .route-button:hover {
      background-color: #d44926;
  }

  /* Tablet-specific scaling */
  @media (max-width: 959px) and (min-width: 640px) {
    .info-card {
      padding: clamp(15px, 4vw, 32px) clamp(15px, 3vw, 32px);
      gap: 15px;
    }
    .info-grid {
        gap: clamp(20px, 6vw, 40px);
    }
    .info-left {
        gap: clamp(8px, 2vw, 20px);
    }
    .info-left h3 {
        font-size: clamp(15px, 2.5vw, 23px);
    }
    .icon {
        font-size: clamp(14px, 1.5vw, 16px);
    }
    .contact-item p {
        font-size: clamp(13px, 1.2vw, 15px);
    }
    .info-right h4 {
        font-size: clamp(14px, 1.8vw, 17px);
    }
    .info-right p {
        font-size: clamp(13px, 1.2vw, 15px);
    }
    .route-button {
        padding: clamp(10px, 1.5vw, 16px) clamp(15px, 4vw, 47px);
        font-size: clamp(13px, 1.5vw, 15px);
    }
  }

  /* Mobile Layout */
  @media (max-width: 639px) {
    .container {
      padding: 0 20px;
    }

    .content-wrapper {
      overflow: visible; /* Allow card to sit below */
      background: #1F130C;
    }

    .map-image {
      aspect-ratio: 300 / 325;
      object-fit: cover;
      border-radius: 8px 8px 0 0;
    }
    
    .map-pin {
      display: block;
    }

    .info-card {
      position: static; /* No longer an overlay */
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
      padding: 15px 20px;
      background: #1F130C;
      backdrop-filter: none;
      border-radius: 0 0 8px 8px;
    }
    
    .info-logo-title {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .info-logo {
        width: 21px;
        height: 21px;
    }

    .info-grid {
        flex-direction: column;
        gap: 15px;
        width: 100%;
    }
    
    .info-left h3 { display: none; }
    
    .info-logo-title h3 {
        font-size: 15px;
        font-weight: 700;
    }

    .contact-item .icon { font-size: 14px; }
    .contact-item p { font-size: 13px; }
    .mobile-only { display: flex; }

    .info-right { margin-top: 0; }
    .info-right h4 { font-size: 14px; }
    .info-right p { font-size: 13px; }

    .route-button {
      width: 100%;
      padding: 12px;
      font-size: 13px;
      margin-top: 5px;
    }
  }
</style> 